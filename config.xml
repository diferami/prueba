     <?xml version=’1.0′ encoding=’utf-8′?>
    <widget id=”com.mototaps.user” version=”1.0.0″ xmlns=”http://www.w3.org/ns/widgets” xmlns:cdv=”http://cordova.apache.org/ns/1.0″>
		<name>MotoTaps</name>
		<description>
		 Aplicación para solicitar servicio de moto taxi, fácil, rápido, eficente y seguro. by Good People Tecnologies - 2017
		</description>
		<author email=”diferami@gmail.com” href=”http://cordova.io”>
			by Good People Technologies - 2017
		</author>
		<content src=”index.html” />

		<access origin=”*” />
		<allow-intent href=”http://*/*” />
		<allow-intent href=”https://*/*” />

		<allow-intent href=”tel:*” />
		<allow-intent href=”sms:*” />
		<allow-intent href=”mailto:*” />
		<allow-intent href=”geo:*” />
		<platform name=”android”>
		<preference name=”android-minSdkVersion” value=”14″ />
		<allow-intent href=”market:*” />
		</platform>
		<platform name=”ios”>
		<allow-intent href=”itms:*” />
		<allow-intent href=”itms-apps:*” />
		<preference name=”BackupWebStorage” value=”none” />
		</platform>
		<preference name=”DisallowOverscroll” value=”true” />
		<plugin name=”cordova-plugin-whitelist” source=”npm” />
		<plugin name=”cordova-plugin-console” spec=”~1.0.1″ />
		<plugin name=”cordova-plugin-statusbar” spec=”~1.0.1″ />


    </widget>
