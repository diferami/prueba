<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mototaps.user" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mototaps</name>
    <description>
       Aplicaciï¿½n para la solicitud de Mototaxi.
    </description>
    <author email="diferamo@gmail.com" href="https://mototaps.com">
        Good People Technologies.
    </author>
    <content src="index.html" />
	
	<platform name="android">
		<access origin="https://mototaps.com/*" />
		<access origin="geo://*" launch-external="true" />
	
		<allow-intent href="https://mototaps.com/*" />
		<allow-intent href="tel:*"  launch-external="true" />
		<allow-intent href="sms:*"  launch-external="true" />
		<allow-intent href="mailto:*"  launch-external="true" />

		

		<allow-navigation href="https://mototaps.com/*" />
		
	
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi.png" />
        <icon density="mdpi" src="res/icon/android/mdpi.png" />
        <icon density="hdpi" src="res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
    </platform>

	<preference name="Fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
</widget>
